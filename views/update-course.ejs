<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Todo Application</title>
    <link rel="stylesheet" href="/assets/css/bootstrap.css">
    <link rel="stylesheet" href="/assets/css/argon.css">
</head>
<body>
<% include partials/nav.ejs %>
<div class="container">
    <div class="tab-content bg-secondary rounded my-4 p-5 clearfix">
        <% if(!!course) { %>
            <h4 class="mb-4">Course code : <%= course.code %></h4>
            <div id="inputs-alternative-component" class="tab-pane tab-example-result fade show active" role="tabpanel"
                 aria-labelledby="inputs-alternative-component-tab">
                <form id="update" action="javascript:">
                    <input type="hidden" name="_id" value="<%= course._id %>">
                    <div class="form-row">
                        <div class="form-group col-6">
                            <label for="code">Course Code</label>
                            <input id="code" type="text" name="code"
                                   class="form-control form-control-alternative w-100"
                                   placeholder="add course code..." value="<%= course.code %>">
                        </div>
                        <div class="form-group col-6">
                            <label for="title">Course Title</label>
                            <input id="title" type="text" name="title"
                                   class="form-control form-control-alternative w-100"
                                   placeholder="add new title..." value="<%= course.title %>">
                        </div>
                    </div>
                    <div class="d-flex justify-content-end">
                        <button onclick="window.location.href='/course'"
                                class="btn btn-secondary mr-4"
                                type="button">cancel
                        </button>
                        <button type="submit" class="btn btn-primary">save</button>
                    </div>
                </form>
            </div>
        <% } else { %>
            <h1 class="display-4 text-center text-muted">Ooops! Course not found</h1>
        <% } %>
    </div>
</div>
<script src="/assets/js/jquery-3.4.1.js"></script>
<script src="/assets/js/popper.min.js"></script>
<script src="/assets/js/bootstrap.js"></script>
<script src="/assets/js/argon.js"></script>
<script src="/assets/js/todo-list.js"></script>
</body>
</html>