<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Todo Application</title>
    <link rel="stylesheet" href="/assets/css/bootstrap.css">
    <link rel="stylesheet" href="/assets/css/argon.css">
</head>
<body>
<% include partials/nav.ejs %>
<div class="container">
    <div class="tab-content bg-secondary rounded my-5 p-5">
        <h4>Course List for Computer Engineering</h4>
        <hr style="height: 1px;" class="mt-2 mb-3">
        <div id="inputs-alternative-component" class="tab-pane tab-example-result fade show active" role="tabpanel"
             aria-labelledby="inputs-alternative-component-tab">
            <form id="add" action="javascript:" class="form-row">
                <div class="form-group col">
                    <label for="code">Course Code</label>
                    <input type="text" name="code" id="code" class="form-control form-control-alternative">
                </div>
                <div class="form-group col">
                    <label for="title">Course Title</label>
                    <input type="text" name="title"  id="title" class="form-control form-control-alternative">
                </div>
                <div class="form-group col-3 d-flex align-items-end">
                    <button type="submit" class="btn btn-block btn-primary">Add Course</button>
                </div>
            </form>
            <div class="card card-shadow">
                <div class="card-body p-0">
                    <table class="table table-borderless">
                        <thead class="border-top-0">
                        <tr>
                            <th scope="col">S/N</th>
                            <th scope="col">Code</th>
                            <th scope="col">Title</th>
                            <th scope="col" class="d-flex justify-content-end">Action</th>
                        </tr>
                        </thead>
                        <tbody>
                        <% courses.forEach(({_id, code, title}, index) => { %>
                            <tr>
                                <th scope="row"><%= index + 1 %></th>
                                <td><%= code %></td>
                                <td><%= title %></td>
                                <td class="d-flex justify-content-end">
                                    <button onclick="window.location.href='/course/<%= _id %>'"
                                            class="btn btn-info btn-sm"
                                            type="button">view
                                    </button>
                                    <button onclick="window.location.href='/course/<%= _id %>/update'"
                                            class="btn btn-icon btn-2 btn-success btn-sm"
                                            type="button">update
                                    </button>
                                    <button class="btn btn-icon btn-2 btn-danger btn-sm"
                                            onclick="deleteCourse(this, '<%= _id %>')"
                                            type="button">delete
                                    </button>
                                </td>
                            </tr>
                        <% }) %>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
<script src="/assets/js/jquery-3.4.1.js"></script>
<script src="/assets/js/popper.min.js"></script>
<script src="/assets/js/bootstrap.js"></script>
<script src="/assets/js/argon.js"></script>
<script src="/assets/js/todo-list.js"></script>
</body>
</html>